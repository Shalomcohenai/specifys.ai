source "https://rubygems.org"

# Jekyll
gem "jekyll", "~> 4.3.0"

# Jekyll plugins
gem "jekyll-redirect-from"
gem "jekyll-sitemap"
gem "jekyll-feed"

# Markdown processor
gem "kramdown-parser-gfm"

# Syntax highlighting
gem "rouge"

# Development dependencies
group :development do
  gem "jekyll-serve"
end

# Ruby 3.4+ compatibility
gem "logger"
gem "csv"
gem "base64"